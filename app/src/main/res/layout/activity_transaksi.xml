<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Transaksi">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/back"
        android:contentDescription="@string/akun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/JudulTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Daftar Transaksi"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="33dp" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_search_stroke"
        android:hint="Cari Transaksi....."
        android:textColorHint="#8E8E93"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="16sp"
        android:inputType="text"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/JudulTransaksi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/etSearch">

        <LinearLayout
            android:id="@+id/llKategoriContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSemua"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Semua"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:background="@drawable/bg_cat_selected"
                android:paddingHorizontal="24dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPenjualan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Penjualan"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:background="@drawable/bg_cat_unselected"
                android:paddingHorizontal="24dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTambah"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="+ Tambah"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:background="@drawable/bg_cat_unselected"
                android:paddingHorizontal="24dp"
                android:stateListAnimator="@null"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>